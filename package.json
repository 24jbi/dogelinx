{
  "name": "dogelinx-studio",
  "version": "0.1.0",
  "description": "DogeLinx Studio Monorepo - A Roblox-like game creation platform",
  "private": true,
  "workspaces": [
    "client",
    "backend",
    "desktop",
    "shared"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm --workspace=backend run dev",
    "dev:client": "npm --workspace=client run dev",
    "dev:all": "concurrently \"npm --workspace=backend run dev\" \"npm --workspace=client run dev\"",
    "build:web": "npm --workspace=client run build",
    "build:desktop": "npm --workspace=desktop run build",
    "build": "npm --workspace=shared run build && npm --workspace=client run build",
    "server": "npm --workspace=backend start",
    "start": "npm --workspace=backend start",
    "electron": "npm --workspace=desktop run dev",
    "electron:dev": "npm --workspace=desktop run dev",
    "lint": "npm --workspaces run lint --if-present",
    "test": "npm --workspace=backend run test"
  },
  "build": {
    "appId": "com.dogelinx.studio",
    "productName": "DogeLinx Studio",
    "artifactName": "${productName}-${version}.${ext}",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.cjs",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DogeLinx Studio",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "fileAssociations": [
      {
        "ext": "dlxplace",
        "name": "DogeLinx Place File",
        "description": "DogeLinx game project file",
        "role": "Editor",
        "icon": "assets/icon.ico"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "username",
      "repo": "dogelinx",
      "private": false
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@supabase/supabase-js": "^2.97.0",
    "archiver": "^6.0.2",
    "body-parser": "^1.20.4",
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.0.0",
    "three": "^0.183.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "vite": "^7.3.1",
    "wait-on": "^8.0.5"
  }
}
