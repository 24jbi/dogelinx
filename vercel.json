{
  "buildCommand": "npm --workspace=client run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "https://dogelinx-backend.onrender.com/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "^/avatar items/(.*)",
      "dest": "/public/avatar items/$1"
    },
    {
      "src": "^/.*\\.(js|css|json|woff|woff2|ttf|eot|svg|png|jpg|jpeg|gif|webp)$",
      "continue": true
    },
    {
      "src": "^/assets/.*",
      "continue": true
    },
    {
      "src": "^/public/.*",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
